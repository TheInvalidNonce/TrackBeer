<h1>Welcome, <%= @user.username if current_user %> </h1>

<h2>Here are your recently saved beers:</h2>

<%= "Oh no, you do not have any saved beers!" if @user.beers.count == 0 %>
<br>
<br>

<a href="/beers/new">Add A New Beer</a>
<br>
<br>

<% @user.beers.reverse.each do |beer| %>
    <h4><a href="/beers/<%=beer.id%>"><%= beer.name %></a></h4>
    <p>
      <%= beer.brewery.name %> 
      | <%= beer.brewery.town if beer.brewery.town != "" %>,
        <%= beer.brewery.state_or_region if beer.brewery.state_or_region != "" %>,
        <%= beer.brewery.country if beer.brewery.country != "" %>
    </p>
<% end %>

<div class="logout">
  <a href="/logout">Sign Out</a>
</div>