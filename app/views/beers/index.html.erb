<h1>Welcome, <%= @user.username if @user %> </h1>

<h2>Here are your recently saved beers:</h2>

<% @beers.reverse.each do |beer| %>
    <h4><a href="/beers/<%=beer.id%>"><%= beer.name %></a></h4>
    <p><%= beer.brewery.name %> 
    <% if beer.brewery.town != "" && beer.brewery.state_or_region != "" %>
        / <%= beer.brewery.town %>, <%= beer.brewery.state_or_region %></p>
    <% end %>
<% end %>

<div class="logout">
  <a href="/logout">Sign Out</a>
</div>